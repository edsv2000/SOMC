<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFF6FE">



    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:background="#EFF6FE"
        android:layout_marginVertical="40dp"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡REGISTRATE!"
            android:textColor="#285FB4"
            android:textSize="21dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empieza a administrar tu negocio a la manera de SOMC."
            android:textColor="#285FB4"
            android:textSize="11dp"
            android:layout_marginBottom="20dp"
            />

        <EditText

            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="NOMBRE COMPLETO"
            android:inputType="text"
            android:background="@color/white"
            android:textSize="12dp"
            android:padding="10dp"
            android:layout_marginBottom="7dp"/>

        <EditText

            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="CORREO"
            android:background="@color/white"
            android:textSize="12dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="7dp"/>

        <EditText

            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="CONTRASEÑA"
            android:inputType="textPassword"
            android:background="@color/white"
            android:textSize="12dp"
            android:padding="10dp"
            android:layout_marginBottom="7dp"/>

        <EditText

            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="CONFIRMACIÓN DE CONTRASEÑA"
            android:background="@color/white"
            android:inputType="textPassword"
            android:textSize="12dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText

            android:id="@+id/telefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="TELEFONO"
            android:inputType="number"
            android:background="@color/white"
            android:textSize="12dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText

            android:id="@+id/puesto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="PUESTO"
            android:background="@color/white"
            android:textSize="12dp"
            android:inputType="text"
            android:padding="10dp"
            android:layout_marginBottom="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55B601"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:text="REGISTRARME"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/main">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes cuenta? "
            android:textColor="#474747"
            />
        <TextView
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#285FB4"
            android:text="Iniciar"
            android:textStyle="bold"

            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="SOMC®"
        android:textSize="13dp"
        android:background="#285FB4"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>